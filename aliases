# ~/.aliases
alias showFiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
alias hideFiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'

alias bw='sass --watch stylesheets/sass:stylesheets'
alias bwc='sass --watch --style compressed stylesheets/sass:stylesheets'
alias cw='coffee --watch -c'
alias cb='coffeebar -m -w'
alias js="jekyll serve -w"
alias gi="gem install"
alias giv="gem install -v"
alias tlf="tail -f"

# Git shortcuts
alias g='git'
alias got='git'
alias get='git'

alias ga='git add -A'
alias gb='git branch'
alias gac='git commit -am'
alias guc='git reset --soft HEAD~1 && git reset --mixed' #git undo commit
alias gc='git commit'
alias gcm='git commit -m'
alias gci="git pull --rebase && git push"
alias gd='git diff'
alias gf='git fetch'
alias go='git checkout'
alias gpr='git pull --rebase'
alias gpu='git push'
#alias gr='git rebase'
alias gs='git status'
alias gx='gitx --all'
alias gclean='git clean -f -d'

# Other
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'

alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"

# Quick look at a file from the shell
alias ql='qlmanage -p'

alias logs='nocorrect logs'
alias nvm='nocorrect nvm'
alias touchall='find static -name "*.coffee" -exec touch {} \;'
