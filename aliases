# ~/.aliases

alias start_redis='redis-server /usr/local/etc/redis.conf'
alias start_memcached='memcached -vv'
alias memcached='/usr/local/bin/memcached -d' # start memcached daemon
alias cuke='rake cucumber'
alias be='bundle exec'

alias clearlog='cat /dev/null > log/cucumber.log > log/development.log'

# Git shortcuts
alias ga='git add -A'
alias gb='git branch '
alias gc='git commit'
alias gac='git commit -am '
alias gd='git diff'
alias gf='git fetch'
alias go='git checkout '
alias gpull='git pull'
alias gpr='git pull --rebase'
alias gpush='git push'
alias gpu='git push'
#alias gr='git rebase'
alias gs='git status '
alias gx='gitx --all'

alias g='git '
alias got='git '
alias get='git '

alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
